{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-console": "off",
        "no-undef": "error",
        "prefer-const": "warn",
        "no-var": "error"
    },
    "ignorePatterns": ["node_modules/", "coverage/", "*.config.js", "data/", "*.json", "scripts/"]
}
